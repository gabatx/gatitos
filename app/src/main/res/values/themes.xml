<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GatosMvvmJavier" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Cambiar el color de la barra superior de la app -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/azul</item>
        <!-- Cambiar el color de la barra inferior de la app -->
        <item name="android:navigationBarColor">@color/azul</item>
    </style>
</resources>